@model IEnumerable<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Categories</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-dark">New category</a>
        </div>
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Orders</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="30%">@item.ShowOrder</td>
                        <td class="btn-group w-100">
                            <a class="btn btn-warning mx-2" asp-controller="Category" asp-route-Id="@item.Id" asp-action="Edit">Edit</a>
                            <a class="btn btn-danger mx-2" asp-controller="Category" asp-route-Id="@item.Id" asp-action="Delete">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>Category not found</p>
        }
    </div>
</div>