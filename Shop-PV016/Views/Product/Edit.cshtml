@model Product

<form method="post" asp-controller="Product" asp-action="Edit">
    <div class="border p-3">
        <div class="row">
            <h2 class="pl-3 mb-3 text-info">Add product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="Name" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="Description" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="Price" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="Image" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="CategoryId" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" value = "Save" class="btn btn-success w-100" />
                        </div>
                        <div class="col">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-dark w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>