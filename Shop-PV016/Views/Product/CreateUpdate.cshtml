@model Shop_PV016.Models.ViewModels.ProductVM

@{
    var title = "New product";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.product.Id != 0)
    {
        title = "Edit product";
        <input asp-for="product.Id" hidden />
    }
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="product.Name" class="form-control"/>
                        <span class="text-danger" asp-validation-for="product.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="product.Price" class="form-control"/>
                        <span class="text-danger" asp-validation-for="product.Price"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product.ShortDescription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="product.ShortDescription" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="product.Description"></textarea>
                        <span class="text-danger" asp-validation-for="product.Description"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product.Image"></label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" id="upload" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="product.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="product.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                            <option disabled selected></option>
                        </select>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if (Model.product.Id != 0)
                            {
                                <input type="submit" value="Update" class="btn btn-warning w-100" />
                            }
                            else
                            {
                                <input type="submit" value="Create" class="btn btn-warning w-100" />

                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</form>

@section Scripts
{
    <script src="~/lib/"></script>
}
